!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: "ie=edge", http:{equiv: "x-ua-compatible"}}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no'}
    %meta{name: "format-detection", content: "telephone=no"}
    %meta{content: 'タイトル', name: 'title'}
    %meta{content: 'サイト説明', name: 'description'}
    -# %meta{content: 'キーワード', name: 'keywords'}
    %meta{property: 'og:type', content: 'website'}
    %meta{property: 'og:image', content: ''}
    %meta{property: 'og:title', content: ''}
    %meta{property: 'og:description', content: ''}
    %meta{property: 'og:url', content: ''}
    %meta{property: 'og:site_name', content: ''}
    %meta{property: 'og:locale', content: 'ja_JP'}
    -# %meta{property: 'fb:admins', content: ''}
    -# %meta{property: 'fb:app_id', content: ''}
    -# %meta{content: 'summary' name: 'twitter:card'}
    -# %meta{content: '@twitter_acount' name: 'twitter:site'}
    %title SHINYA KUNISADA
    -# import css files
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag 'partials'
    = stylesheet_link_tag 'site'
    %link{:href => "https://fonts.googleapis.com/css?family=Kaushan+Script", :rel => "stylesheet"}
    -# favicon の一括生成はこちらから https://ao-system.net/favicon/
    -# html to haml http://htmltohaml.com/
  %body
    #nowloading
    #wrapper
      = partial 'partials/header'
      = yield
      = partial 'partials/footer'

    -# if it IE 9
    -# %script{:src => "https://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"}
    -# else if

    -# fontawesome
    %script{:src => "https://use.fontawesome.com/b001c86902.js"}
    -# import jquery
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"}
    -# import javascript files
    = javascript_include_tag 'site'
    %script{:type => "text/javascript"}
      window.onload = function() {
      setTimeout("show()", 2500);
      }

      function show() {
      document.getElementById("nowloading").style.display = none;
      document.getElementById("wrapper").style.display = block;
      }
